      # TODO: valid float range: 1.401298464E-45 to 3.402823466E+38
      (?:\B[-+])?
      (?:
        (?:
          \B\.[0-9]+|                     # e.g. .999
          \b(?:
            [1-9]+[0-9]*|
            0
          )\.(?:[0-9]+)?                  # e.g. 999.999
        )(?:e[-+]?[1-9]+[0-9]*)? |        # e.g. base float with exponent
